<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_news_details"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="news.spaceghost.com.newsapp.NewsDetailsActivity">

  <WebView
      android:id="@+id/activity_news_details_webview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></WebView>

  <ProgressBar
      android:id="@+id/activity_news_details_progressbar"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:indeterminate="true"/>

</RelativeLayout>
